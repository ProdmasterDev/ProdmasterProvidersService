<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Портал поставщика Продмастер</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProdmasterProvidersService.styles.css" asp-append-version="true" />
    <link for-controller="Catalog" rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js@9.0.1/public/assets/styles/choices.min.css" />
    <link rel="icon" href="~/favicon.png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand ps-4" href="/">
                    <img class="ps-1" src="~/images/logo-sm.png" alt="Продмастер" width="250" height="100">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul asp-authorize class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Catalog" asp-action="Index">Каталог</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Specification" asp-action="Index">Спецификации</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Index">Профиль</a>
                        </li>
                    </ul>
                    <a asp-authorize asp-area="" asp-controller="Account" asp-action="Logout" class="btn btn-outline-light" type="button">
                        <span>Выйти</span>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Портал поставщика Продмастер
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script for-controller="Account" src="~/lib/jquery-inputmask/jquery.inputmask.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script for-controller="Account" src="~/js/account.js" asp-append-version="true"></script>
    <script for-controller="Home" src="~/js/home.js" asp-append-version="true"></script>
    <script for-controller="Catalog" src="~/js/products.js" asp-append-version="true"></script>
    <script for-controller="Specification" src="~/js/specifications.js" asp-append-version="true"></script>
    <script for-controller="Catalog" src="https://cdn.jsdelivr.net/npm/choices.js@9.0.1/public/assets/scripts/choices.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>