@model ProvidersDomain.ViewModels.Catalog.ProductModel
@{
    ViewData["Title"] = Model.Name.ToLower();
}

<h2 class="mb-5">@Model.Name.ToLower()</h2>

<div class="mb-3">
    <label class="fw-bold" asp-for="@Model.StandartId"></label><br>
    <p class="ms-3">@(Model.Standart?.Name.ToLower() ?? "Не указан")</p>
</div>
<div class="mb-3">
    <label class="fw-bold" asp-for="@Model.Quantity"></label><br>
    <p class="ms-3">@Model.Quantity</p>
</div>
<div class="mb-3">
    <label class="fw-bold" asp-for="@Model.Name"></label><br />
    <p class="ms-3">@Model.Name.ToLower()</p>
</div>
<div class="mb-3">
    <label class="fw-bold" asp-for="@Model.VendorCode"></label><br />
    @if (!string.IsNullOrEmpty(Model.Brand))
    {
        <p class="ms-3">@(Model.VendorCode ?? "Не указан")</p>
    }
    else
    {
        <p class="ms-3">Не указан</p>
    }
</div>
@if (!string.IsNullOrEmpty(Model.ManufacturerName))
{
    <div class="mb-3">
        <label class="fw-bold" asp-for="@Model.ManufacturerName"></label><br />
        <p class="ms-3">@Model.ManufacturerName</p>
    </div>
}
else
{
    <div class="mb-3">
        <label class="fw-bold" asp-for="@Model.ManufacturerId"></label><br>
        <p class="ms-3">@(Model.Manufacturer?.Name ?? "Не указан")</p>
    </div>
}
<div class="mb-3">
    <label class="fw-bold" asp-for="@Model.Brand"></label><br />
    @if (!string.IsNullOrEmpty(Model.Brand))
    {
        <p class="ms-3">@Model.Brand</p>
    }
    else
    {
        <p class="ms-3">Не указан</p>
    }
</div>
<div class="mb-3">
    <label class="fw-bold" asp-for="@Model.CountryId"></label><br>
    <p class="ms-3">@(Model.Country?.Name ?? "Не указан")</p>
</div>
<div class="mb-3">
    <label class="fw-bold" asp-for="@Model.Note"></label><br />
    <p class="ms-3">@(Model.Note ?? "Не указано")</p>
</div>
<div class="mb-3">
    <label class="fw-bold" asp-for="@Model.LastPrice"></label><br />
    <p class="ms-3">@(Model.LastPrice ?? "Не указано")</p>
</div>
<a class="btn btn-outline-success" asp-action="editSpecification" asp-controller="Specification" asp-route-id="@Model.SpecificationId" asp-route-productToAdd="@Model.Id">Добавить в спецификацию</a>
<button id="cancel" class="btn btn-outline-secondary" onclick="history.back();">Назад</button>